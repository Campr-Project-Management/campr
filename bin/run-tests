#!/usr/bin/env bash

rm -rf web/uploads/test
mkdir -p src/TSS/CoreBundle/Tests/Resources/img/
cp -f app/Resources/img/image.jpg src/TSS/CoreBundle/Tests/Resources/img/
bin/console doctrine:database:drop --if-exists --force --env=test
bin/console doctrine:database:create --env=test
bin/console doctrine:migrations:migrate --no-interaction --env=test
bin/console doctrine:fixtures:load --fixtures=src/TSS/CoreBundle/DataFixtures/Test/ --no-interaction --append --env=test
bin/console cache:clear --env=test
vendor/bin/phpunit -c . src
