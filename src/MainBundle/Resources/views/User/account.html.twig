{% trans_default_domain 'main' %}

{% extends 'MainBundle::base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">{{ 'main.account.settings.title'|trans }}: {{ user.fullName }}</p>
            </h1>
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(
                form,
                {
                    'method': 'POST',
                    'action': path('main_user_account'),
                    'attr': {
                        'id': 'edit-account',
                        'novalidate': 'novalidate',
                    },
                }
            ) }}
            {% if form.vars.valid == false %}
                <div class="alert alert-danger">
                    {% for field in form.children %}
                        {{ form_errors(field) }}
                        {% if field.children %}
                            {% for child in field.children %}
                                {{ form_errors(child) }}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="control-group form-group {% if form_errors(form.username) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.username'|trans }}</label>
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.email) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.email'|trans }}</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.firstName) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.first_name'|trans }}</label>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.lastName) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.last_name'|trans }}</label>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.avatarFile) %}has-error{% endif %}">
                {{ form_widget(form.avatarFile, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="control-group form-group {% if form_errors(form.phone) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.phone'|trans }}</label>
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.plainPassword.first) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.password'|trans }}</label>
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.plainPassword.second) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.settings.repeat_password'|trans }}</label>
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">{{ 'main.general.button.save'|trans }}</button>
            </div>
            {{ form_end(form, {'render_rest': true}) }}
        </div>
    </div>
{% endblock %}
