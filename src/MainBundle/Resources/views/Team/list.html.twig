{% trans_default_domain 'main' %}

{% extends 'MainBundle::base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">{{ 'main.account.team.title'|trans }}</p>
            </h1>
            <a href="{{ path('main_team_create') }}" class="btn btn-sm btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-condensed table-responsive">
                <thead>
                    <th>{{ 'main.account.team.table.id'|trans }}</th>
                    <th>{{ 'main.account.team.table.name'|trans }}</th>
                    <th>{{ 'main.account.team.table.slug'|trans }}</th>
                    <th>{{ 'main.account.team.table.members'|trans }}</th>
                    <th>{{ 'main.account.team.table.enabled'|trans }}</th>
                    <th>{{ 'main.general.actions'|trans }}</th>
                </thead>
                <tbody>
                    {% for team in app.user.teams %}
                        <tr>
                            <td>{{ team.id }}</td>
                            <td>{{ team }}</td>
                            <td>{{ team.slug }}</td>
                            <td>{{ team.teamMembers.count }}</td>
                            <td>{{ team.enabled ? ('yes'|trans) : ('no'|trans) }}</td>
                            <td>
                                <a href="{{ path('main_team_edit', {'id': team.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                                {% if team.enabled %}
                                    <a href="{{ path('main_team_sso', {'id': team.id}) }}" class="btn btn-primary">
                                        <i class="glyphicon glyphicon-expand"></i>
                                        {{ 'login'|trans }}
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
