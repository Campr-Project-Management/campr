{% trans_default_domain 'main' %}

{% extends 'MainBundle::base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">
                    {{ 'main.account.payment_method.edit.title'|trans }}: {{ payment_method.name }}
                    <a href="{{ path('main_payment_method_list') }}" class="btn btn-sm btn-primary pull-right">{{ 'main.account.payment_method.back'|trans }}</a>
                </p>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(
                form,
                {
                    'method': 'POST',
                    'action': path('main_payment_method_edit', {'id': payment_method.id}),
                    'attr': {
                        'id': 'edit-payment-method',
                        'novalidate': 'novalidate',
                    },
                }
            ) }}
            {% if form.vars.valid == false %}
                <div class="alert alert-danger">
                    {% for field in form.children %}
                        {{ form_errors(field) }}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="control-group form-group {% if form_errors(form.name) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.payment_method.create.name'|trans }}</label>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.token) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'main.account.payment_method.create.token'|trans }}</label>
                    {{ form_widget(form.token, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">{{ 'main.general.button.save'|trans }}</button>
            </div>
            {{ form_end(form, {'render_rest': true}) }}
        </div>
    </div>
{% endblock %}
