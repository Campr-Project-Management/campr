{% trans_default_domain 'admin' %}

{% extends 'MainBundle:Admin:base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">
                    {{ 'admin.user.edit.title'|trans }} - {{ user.fullName }}
                    <a href="{{ path('main_admin_user_list') }}" class="btn btn-sm btn-primary pull-right">{{ 'admin.general.back'|trans }}</span></a>
                </p>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_start(
            form,
            {
                'method': 'POST',
                'action': path('main_admin_user_edit', {'id': user.id}),
                'attr': {
                'id': 'edit-user',
                'novalidate': 'novalidate',
            },
            }
            ) }}
            {% if form.vars.valid == false %}
                <div class="alert alert-danger">
                    {% for field in form.children %}
                        {{ form_errors(field) }}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="control-group form-group {% if form_errors(form.firstName) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'admin.user.create.first_name'|trans }}</label>
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.lastName) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'admin.user.create.last_name'|trans }}</label>
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group {% if form_errors(form.phone) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'admin.user.create.phone'|trans }}</label>
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group">
                {% for roleChild in form.roles.children %}
                    <label class="radio-inline">
                        {{ form_widget(
                        roleChild,
                        {
                            'attr': {
                            'class': 'form-control',
                        },
                        }
                        ) }}
                        {{ roleChild.vars.label|trans }}
                    </label>
                {% endfor %}
            </div>
            <div class="control-group form-group">
                <label class="checkbox-inline">
                    {{ form_widget(form.isEnabled) }}
                    <label>{{ 'admin.user.edit.enabled'|trans }}</label>
                </label>
                <label class="checkbox-inline">
                    {{ form_widget(form.isSuspended) }}
                    <label>{{ 'admin.user.edit.suspended'|trans }}</label>
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">{{ 'admin.general.button.save'|trans }}</button>
            </div>
            {{ form_end(form, {'render_rest': true}) }}
        </div>
    </div>
{% endblock %}
