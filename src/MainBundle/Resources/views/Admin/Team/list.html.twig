{% extends 'MainBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">{{ 'admin.team.list.title'|trans }}</p>
            </h1>
            <a href="{{ path('main_admin_team_create') }}" class="btn btn-sm btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-condensed table-responsive">
                <thead>
                <th>{{ 'admin.team.list.table.id'|trans }}</th>
                <th>{{ 'admin.team.list.table.logo'|trans }}</th>
                <th>{{ 'admin.team.list.table.name'|trans }}</th>
                <th>{{ 'admin.team.list.table.slug'|trans }}</th>
                <th>{{ 'admin.team.list.table.created_at'|trans }}</th>
                <th>{{ 'admin.team.list.table.updated_at'|trans }}</th>
                <th>{{ 'admin.general.actions'|trans }}</th>
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.id }}</td>
                        <td class="col-xs-1 thumbnail">
                            <img src="{{ vich_uploader_asset(team, 'logoFile') }}" alt="{{ team.name }}">
                        </td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.slug }}</td>
                        <td>{{ team.createdAt|date('d/m/Y') }}</td>
                        <td>{{ team.updatedAt|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('main_admin_team_edit', {'id': team.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                            <a href="{{ path('main_admin_team_delete', {'id': team.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                            <a href="{{ path('main_admin_team_member_list', {'team': team.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
