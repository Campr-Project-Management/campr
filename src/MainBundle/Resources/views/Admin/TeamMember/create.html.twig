{% trans_default_domain 'admin' %}

{% extends 'MainBundle:Admin:base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">
                    {{ 'admin.team_member.create.title'|trans }}
                    <a href="{{ path('main_admin_team_member_list', {'team': team.id}) }}" class="btn btn-sm btn-primary pull-right">{{ 'admin.general.back'|trans }}</span></a>
                </p>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_start(
                form,
                {
                    'method': 'POST',
                    'action': path('main_admin_team_member_create', {'team': team.id}),
                    'attr': {
                        'id': 'create-team-member',
                        'novalidate': 'novalidate',
                    },
                }
            ) }}
            {% if form.vars.valid == false %}
                <div class="alert alert-danger">
                    {% for field in form.children %}
                        {{ form_errors(field) }}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="control-group form-group {% if form_errors(form.user) %}has-error{% endif %}">
                <div class="controls">
                    <label>{{ 'admin.team_member.create.user'|trans }}</label>
                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="control-group form-group">
                {% for roleChild in form.roles.children %}
                    <label class="radio-inline">
                        {{ form_widget(
                        roleChild,
                            {
                                'attr': {
                                    'class': 'form-control',
                                },
                            }
                        ) }}
                        {{ roleChild.vars.label|trans }}
                    </label>
                {% endfor %}
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">{{ 'admin.general.button.create'|trans }}</button>
            </div>
            {{ form_end(form, {'render_rest': true}) }}
        </div>
    </div>
{% endblock %}
