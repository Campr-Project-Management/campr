{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.working_time.edit.title'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_working_time_create') }}">{{ 'admin.working_time.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_working_time_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-0 card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_working_time_edit', {'id': id}),
                            'attr': {
                                'id': 'edit-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                    {% if form.vars.valid == false %}
                        <div class="alert alert-danger">
                            {% for field in form.children %}
                                {{ form_errors(field) }}
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_widget(
                        form.day,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'admin.working_time.create.day'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.fromTime,
                        {
                            'attr': {
                                'class': 'form-control time-picker',
                                'data-date-format': "HH:mm",
                                'addon_front': 'time',
                            },
                            'label': 'admin.working_time.create.from_time'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.toTime,
                        {
                            'attr': {
                                'class': 'form-control time-picker',
                                'data-date-format': "HH:mm",
                                'addon_front': 'time',
                            },
                            'label': 'admin.working_time.create.to_time'|trans
                        }
                    ) }}

                    {% include '@App/Admin/Layout/Partials/form_edit_buttons.html.twig'
                        with {
                            'delete_path': 'app_admin_working_time_delete',
                            'id': id,
                        }
                    %}

                    <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
