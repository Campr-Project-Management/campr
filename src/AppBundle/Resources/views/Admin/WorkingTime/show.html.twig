{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.working_time.list'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_working_time_create') }}">{{ 'add.working_time'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_working_time_edit', {'id': workingTime.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_working_time_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'table_header_cell.id'|trans }}</th>
                                    <td>{{ workingTime.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.day'|trans }}</th>
                                    <td>{{ workingTime.day.calendar.name|default('-') }} - {{ workingTime.day.id|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.from_time'|trans }}</th>
                                    <td>{{ workingTime.fromTime|date('H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.to_time'|trans }}</th>
                                    <td>{{ workingTime.toTime|date('H:i') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
