{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.wppcwct.list.title'|trans }}<small>{{ workProjectType.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_wppcwct_create') }}">{{ 'admin.wppcwct.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_wppcwct_edit', {'id': workProjectType.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_wppcwct_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.id'|trans }}</th>
                                    <td>{{ workProjectType.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.name'|trans }}</th>
                                    <td>{{ workProjectType.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.workpackage'|trans }}</th>
                                    <td>{{ workProjectType.workPackage.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.projectworkcosttype'|trans }}</th>
                                    <td>{{ workProjectType.projectWorkCostType.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.base'|trans }}</th>
                                    <td>{{ workProjectType.base|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.change'|trans }}</th>
                                    <td>{{ workProjectType.change|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.actual'|trans }}</th>
                                    <td>{{ workProjectType.actual|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.remaining'|trans }}</th>
                                    <td>{{ workProjectType.remaining|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.forecast'|trans }}</th>
                                    <td>{{ workProjectType.forecast|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.is_generic'|trans }}</th>
                                    {% if workProjectType.isGeneric %}
                                        <span class="c-green">{{ 'admin.general.yes'|trans }}</span>
                                    {% else %}
                                        <span class="c-red">{{ 'admin.general.no'|trans }}</span>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.is_inactive'|trans }}</th>
                                    {% if workProjectType.isInactive %}
                                        <span class="c-green">{{ 'admin.general.yes'|trans }}</span>
                                    {% else %}
                                        <span class="c-red">{{ 'admin.general.no'|trans }}</span>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.is_enterprise'|trans }}</th>
                                    {% if workProjectType.isEnterprise %}
                                        <span class="c-green">{{ 'admin.general.yes'|trans }}</span>
                                    {% else %}
                                        <span class="c-red">{{ 'admin.general.no'|trans }}</span>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.is_cost_resource'|trans }}</th>
                                    {% if workProjectType.isCostResource %}
                                        <span class="c-green">{{ 'admin.general.yes'|trans }}</span>
                                    {% else %}
                                        <span class="c-red">{{ 'admin.general.no'|trans }}</span>
                                    {% endif %}
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.is_budget'|trans }}</th>
                                    {% if workProjectType.isBudget %}
                                        <span class="c-green">{{ 'admin.general.yes'|trans }}</span>
                                    {% else %}
                                        <span class="c-red">{{ 'admin.general.no'|trans }}</span>
                                    {% endif %}                            </tr>
                                <tr>
                                    <th>{{ 'admin.workpackage.list.table.created_at'|trans }}</th>
                                    <td>{{ workProjectType.createdAt|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.wppcwct.list.table.updated_at'|trans }}</th>
                                    <td>{{ workProjectType.updatedAt|date('d/m/Y')  }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
