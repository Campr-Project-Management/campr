{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.timephase.list'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_timephase_create') }}">{{ 'add.timephase'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_timephase_edit', {'id': timephase.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_timephase_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'table_header_cell.id'|trans }}</th>
                                    <td>{{ timephase.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.type'|trans }}</th>
                                    <td>{{ timephase.type }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.workpackage_assignment'|trans }}</th>
                                    <td>{{ timephase.assignment.workpackage.name|default('-') }} - {{ timephase.assignment.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.unit'|trans }}</th>
                                    <td>{{ timephase.unit }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.value'|trans }}</th>
                                    <td>{{ timephase.value }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.started_at'|trans }}</th>
                                    <td>{{ timephase.startedAt|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.finished_at'|trans }}</th>
                                    <td>{{ timephase.finishedAt|date('d/m/Y') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
