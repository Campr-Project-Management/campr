{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="card">
        <div class="card-header bgm-teal">
            <h2>{{ 'admin.project.files.list.title'|trans }}<small>{{ 'admin.project.files.list.subtitle'|trans }}</small></h2>
            <a href="{{ path('app_admin_project_upload', {'id': id}) }}">
                <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
            </a>
        </div>
        <div class="card-body">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div id="general-alert" class="alert alert-success m-t-15">
                    <strong>{{ flash_message }}</strong>
                </div>
            {% endfor %}
            <div id="delete-item-alert" class="alert alert-success m-t-15 hidden">
                <strong>
                    {{ 'admin.project.files.delete.success.first'|trans }}
                    <span id="object-id">
                        {% for flash_message in app.session.flashBag.get('success') %}
                            {{ flash_message }}
                        {% endfor %}
                    </span>
                    {{ 'admin.project.files.delete.success.second'|trans }}
                </strong>
            </div>
            <div id="delete-item-alert-failure" class="alert alert-danger m-t-15 hidden">
                <strong>
                    {{ 'admin.project.files.delete.failed.first'|trans }}
                    <span id="object-id">
                        {% for flash_message in app.session.flashBag.get('error') %}
                            {{ flash_message }}
                        {% endfor %}
                    </span>
                    {{ 'admin.project.files.delete.failed.second'|trans }}
                </strong>
            </div>
            <div class="table-responsive">
                <table
                    id="data-table-command"
                    class="table table-condensed table-stripe4d table-vmiddle"
                    data-url="{{ path('app_admin_project_files_filtered', {'id': id}) }}"
                    data-delete="app_admin_project_remove_file">
                    <thead>
                        <tr>
                            <th data-column-id="id" data-identifier="true" data-type="numeric">{{ 'admin.project.files.list.id'|trans }}</th>
                            <th data-column-id="fileSystem">{{ 'admin.project.files.list.filesystem'|trans }}</th>
                            <th data-column-id="user">{{ 'admin.project.files.list.user'|trans }}</th>
                            <th data-column-id="path">{{ 'admin.project.files.list.path'|trans }}</th>
                            <th data-column-id="mimeType">{{ 'admin.project.files.list.mime_type'|trans }}</th>
                            <th data-column-id="fileSize">{{ 'admin.project.files.list.file_size'|trans }}</th>
                            <th data-column-id="commands" data-formatter="commands" data-sortable="false">{{ 'admin.general.placeholder.actions'|trans }}</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Data Table -->
    <script src="{{ asset('bundles/app/assets/js/data_table.js') }}"></script>
    <script src="{{ asset('bundles/app/assets/js/alert_messages.js') }}"></script>
{% endblock %}
