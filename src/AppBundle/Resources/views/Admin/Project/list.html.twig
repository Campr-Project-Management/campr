{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.project.list.title'|trans }}<small>{{ 'admin.project.list.subtitle'|trans }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_create') }}">{{ 'admin.project.list.add'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success m-t-15">
                            <strong>{{ flash_message }}</strong>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>{{ 'admin.project.list.table.id'|trans }}</th>
                                <th>{{ 'admin.project.list.table.name'|trans }}</th>
                                <th>{{ 'admin.project.list.table.number'|trans }}</th>
                                <th>{{ 'admin.project.list.table.project_category'|trans }}</th>
                                <th>{{ 'admin.project.list.table.status'|trans }}</th>
                                <th>{{ 'admin.project.list.table.portfolio'|trans }}</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td class="f-500 c-cyan">{{ project.id }}</td>
                                    <td>{{ project.name }}</td>
                                    <td>{{ project.number }}</td>
                                    <td>
                                        {% if project.projectCategory %}
                                            {{ project.projectCategory.name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project.status %}
                                            {{ project.status.name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project.portfolio %}
                                            {{ project.portfolio.name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% include '@App/Admin/Layout/Partials/form_list_buttons.html.twig'
                                            with {
                                                'show_path': 'app_admin_project_show',
                                                'edit_path': 'app_admin_project_edit',
                                                'delete_path': 'app_admin_project_delete',
                                                'id': project.id,
                                            }
                                        %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="f-500 c-cyan">{{ 'admin.project_category.list.not_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
