{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="card">
        <div class="card-header bgm-teal">
            <h2>{{ 'admin.project.list.title'|trans }}<small>{{ 'admin.project.list.subtitle'|trans }}</small></h2>
            <a href="{{ path('app_admin_project_create') }}">
                <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
            </a>
        </div>
        <div class="card-body">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div id="general-alert" class="alert alert-success m-t-15">
                    <strong>{{ flash_message }}</strong>
                </div>
            {% endfor %}
            <div id="delete-item-alert" class="alert alert-success m-t-15 hidden">
                <strong>
                    {{ 'admin.project.delete.success.first'|trans }}
                    <span id="object-id">
                        {% for flash_message in app.session.flashBag.get('success') %}
                            {{ flash_message }}
                        {% endfor %}
                    </span>
                    {{ 'admin.project.delete.success.second'|trans }}
                </strong>
            </div>
            <div class="table-responsive">
                <table id="data-table-command" class="table table-condensed table-striped table-vmiddle" data-url="{{ path('app_admin_project_list_filtered') }}" data-show="app_admin_project_show" data-edit="app_admin_project_edit" data-delete="app_admin_project_delete" data-files="app_admin_project_media_list">
                    <thead>
                        <tr>
                            <th data-column-id="id" data-identifier="true" data-type="numeric">{{ 'admin.project.list.table.id'|trans }}</th>
                            <th data-column-id="name">{{ 'admin.project.list.table.name'|trans }}</th>
                            <th data-column-id="number">{{ 'admin.project.list.table.number'|trans }}</th>
                            <th data-column-id="projectCategory">{{ 'admin.project.list.table.project_category'|trans }}</th>
                            <th data-column-id="status">{{ 'admin.project.list.table.status'|trans }}</th>
                            <th data-column-id="portfolio">{{ 'admin.project.list.table.portfolio'|trans }}</th>
                            <th data-column-id="commands" data-formatter="commands" data-sortable="false">{{ 'admin.general.placeholder.actions'|trans }}</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Data Table -->
    <script src="{{ asset('bundles/app/assets/js/data_table.js') }}"></script>
    <script src="{{ asset('bundles/app/assets/js/alert_messages.js') }}"></script>
{% endblock %}
