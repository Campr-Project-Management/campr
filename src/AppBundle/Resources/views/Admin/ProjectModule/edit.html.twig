{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.project_module.edit.title'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_module_create') }}">{{ 'admin.project_module.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_project_module_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_project_module_edit', {'id': project_module.id}),
                            'attr': {
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                        {% if form.vars.valid == false %}
                            <div class="alert alert-danger">
                                {% for field in form.children %}
                                    {{ form_errors(field) }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(
                            form.module,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                    'placeholder': 'admin.general.placeholder.module'|trans,
                                },
                                'label': 'admin.project_module.create.module'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.project,
                            {
                                'attr': {'class': 'form-control input-sm'},
                                'label': 'admin.project_module.create.project'|trans,
                            }
                        ) }}
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                {{ form_widget(
                                    form.isEnabled,
                                    {
                                        'attr': {'class': 'form-control'},
                                        'label': 'admin.project_module.create.enabled'|trans,
                                    }
                                ) }}
                                {{ form_widget(
                                    form.isRequired,
                                    {
                                        'attr': {'class': 'form-control'},
                                        'label': 'admin.project_module.create.required'|trans,
                                    }
                                ) }}
                                {{ form_widget(
                                    form.isPrint,
                                    {
                                        'attr': {'class': 'form-control'},
                                        'label': 'admin.project_module.create.printable'|trans,
                                    }
                                ) }}
                            </div>
                        </div>

                        {% include '@App/Admin/Layout/Partials/form_edit_buttons.html.twig'
                            with {
                                'delete_path': 'app_admin_project_module_delete',
                                'id': project_module.id,
                            }
                        %}

                        <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
