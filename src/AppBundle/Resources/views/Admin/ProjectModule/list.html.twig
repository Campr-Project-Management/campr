{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.project_module.list.title'|trans }}<small>{{ 'admin.project_module.list.subtitle'|trans }}</small></h2>
                    <a href="{{ path('app_admin_project_module_create') }}">
                        <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
                    </a>
                </div>
                <div class="card-body">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success m-t-15">
                            <strong>{{ flash_message }}</strong>
                        </div>
                    {% endfor %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'admin.project_module.list.table.id'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.module'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.project'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.enabled'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.required'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.printable'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.created_at'|trans }}</th>
                                    <th>{{ 'admin.project_module.list.table.updated_at'|trans }}</th>
                                    <th>{{ 'admin.general.list.placeholder.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for project_module in project_modules %}
                                <tr>
                                    <td class="f-500 c-cyan">{{ project_module.id }}</td>
                                    <td>{{ project_module.module }}</td>
                                    <td>
                                        {% if project_module.project %}
                                            {{ project_module.project.name }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_module.isEnabled %}
                                            <span class="p-5 c-white brd-2 bgm-green">
                                                {{ 'admin.general.form.checkbox.checked'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="p-5 c-white brd-2 bgm-blue">
                                                {{ 'admin.general.form.checkbox.unchecked'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_module.isRequired %}
                                            <span class="p-5 c-white brd-2 bgm-green">
                                                {{ 'admin.general.form.checkbox.checked'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="p-5 c-white brd-2 bgm-blue">
                                                {{ 'admin.general.form.checkbox.unchecked'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_module.isPrint %}
                                            <span class="p-5 c-white brd-2 bgm-green">
                                                {{ 'admin.general.form.checkbox.checked'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="p-5 c-white brd-2 bgm-blue">
                                                {{ 'admin.general.form.checkbox.unchecked'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_module.createdAt %}
                                            {{ project_module.createdAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_module.updatedAt %}
                                            {{ project_module.updatedAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% include '@App/Admin/Layout/Partials/form_list_buttons.html.twig'
                                            with {
                                                'show_path': 'app_admin_project_module_show',
                                                'edit_path': 'app_admin_project_module_edit',
                                                'delete_path': 'app_admin_project_module_edit',
                                                'id': project_module.id,
                                            }
                                        %}
                                        <a href="{{ path('app_admin_project_module_show', {'id': project_module.id}) }}">
                                            <button class="btn btn-xs bgm-blue">
                                                <i class="zmdi zmdi-zoom-in"></i>
                                                {{ 'admin.general.form.button.view'|trans }}
                                            </button>
                                        </a>
                                        <a href="{{ path('app_admin_project_module_edit', {'id': project_module.id}) }}">
                                            <button class="btn btn-xs bgm-blue">
                                                <i class="zmdi zmdi-edit"></i>
                                                {{ 'admin.general.form.button.edit'|trans }}
                                            </button>
                                        </a>
                                        <a href="{{ path('app_admin_project_module_delete', {'id': project_module.id}) }}">
                                            <button class="btn btn-xs bgm-red">
                                                <i class="zmdi zmdi-delete"></i>
                                                {{ 'admin.general.form.button.delete'|trans }}
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9" class="f-500 c-cyan">{{ 'admin.project_module.list.not_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
