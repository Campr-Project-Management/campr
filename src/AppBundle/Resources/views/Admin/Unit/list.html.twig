{% extends 'AppBundle:Admin:base.html.twig' %}
{% trans_default_domain 'admin' %}
{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.unit.list.title'|trans }}<small>{{ 'admin.unit.list.subtitle'|trans }}</small></h2>
                    <a href="{{ path('app_admin_unit_create') }}">
                        <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
                    </a>
                </div>
                <div class="card-body m-t-0">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success">
                            <strong>{{ flash_message }}</strong>
                        </div>
                    {% endfor %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.id'|trans }}</th>
                                    <th>{{ 'admin.unit.list.table.name'|trans }}</th>
                                    <th>{{ 'admin.unit.list.table.project'|trans }}</th>
                                    <th>{{ 'admin.general.placeholder.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for unit in units %}
                                    <tr>
                                        <td class="f-500 c-cyan">{{ unit.id }}</td>
                                        <td>{{ unit.name }}</td>
                                        <td>{{ unit.project.name|default('-') }}</td>
                                        <td>
                                            {% include '@App/Admin/Layout/Partials/form_list_buttons.html.twig'
                                                with {
                                                    'show_path': 'app_admin_unit_show',
                                                    'edit_path': 'app_admin_unit_edit',
                                                    'delete_path': 'app_admin_unit_delete',
                                                    'id': unit.id,
                                                }
                                            %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="f-500 c-cyan">{{ 'admin.unit.list.no-units'|trans }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="recent-items-chart" class="flot-chart"></div>
            </div>
        </div>
    </div>
{% endblock %}
