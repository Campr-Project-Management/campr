{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.unit.list.title'|trans }}<small>{{ unit.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_unit_create') }}">{{ 'admin.unit.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_unit_edit', {'id': unit.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_unit_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.id'|trans }}</th>
                                    <td>{{ unit.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.name'|trans }}</th>
                                    <td>{{ unit.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.project'|trans }}</th>
                                    <td>{{ unit.project.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.sequence'|trans }}</th>
                                    <td>{{ unit.sequence }}</td>
                                </tr>

                                <tr>
                                    <th>{{ 'admin.unit.list.table.created_at'|trans }}</th>
                                    <td>{{ unit.createdAt|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.unit.list.table.updated_at'|trans }}</th>
                                    <td>{{ unit.updatedAt|date('d/m/Y') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
