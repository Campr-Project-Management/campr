{% extends 'AppBundle:Admin:base.html.twig' %}
{% trans_default_domain 'admin' %}
{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.todo.list.title'|trans }}<small>{{ 'admin.todo.list.subtitle'|trans }}</small></h2>
                    <a href="{{ path('app_admin_todo_create') }}">
                        <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
                    </a>
                </div>
                <div class="card-body m-t-0">
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success">
                            <strong>{{ flash_message }}</strong>
                        </div>
                    {% endfor %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'admin.todo.list.table.id'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.title'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.project'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.responsible'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.date'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.due_date'|trans }}</th>
                                    <th>{{ 'admin.todo.list.table.status'|trans }}</th>
                                    <th>{{ 'admin.general.placeholder.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for todo in todos %}
                                    <tr>
                                        <td class="f-500 c-cyan">{{ todo.id }}</td>
                                        <td>{{ todo.title }}</td>
                                        <td>{{ todo.project.name|default('-') }}</td>
                                        <td>{{ todo.meeting.name|default('-') }}</td>
                                        <td>{{ todo.responsibility.username }}</td>
                                        <td>{{ todo.date|date('d/m/Y') }}</td>
                                        <td>{{ todo.dueDate|date('d/m/Y') }}</td>
                                        <td>{{ todo.status.name|default('-') }}</td>
                                        <td>
                                            {% include '@App/Admin/Layout/Partials/form_list_buttons.html.twig'
                                                with {
                                                    'show_path': 'app_admin_todo_show',
                                                    'edit_path': 'app_admin_todo_edit',
                                                    'delete_path': 'app_admin_todo_delete',
                                                    'id': todo.id,
                                                }
                                            %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="f-500 c-cyan">{{ 'admin.todo.list.no-todos'|trans }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="recent-items-chart" class="flot-chart"></div>
            </div>
        </div>
    </div>
{% endblock %}
