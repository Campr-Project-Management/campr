{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.day.list.title'|trans }}<small>{{ day.calendar.name|default('-') }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_day_create') }}">{{ 'admin.day.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_day_edit', {'id': day.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_day_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'admin.day.list.table.id'|trans }}</th>
                                <td>{{ day.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.day.list.table.type'|trans }}</th>
                                <td>{{ day.type }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.day.list.table.working'|trans }}</th>
                                <td>{{ day.working }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.day.list.table.calendar'|trans }}</th>
                                <td>{{ day.calendar.name|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.day.list.table.working_times'|trans }}</th>
                                <td>
                                    {% for wt in day.workingTimes %}
                                        <p>{{ wt.fromTime|date('H:i') }} - {{ wt.toTime|date('H:i') }}</p>
                                    {% endfor %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
