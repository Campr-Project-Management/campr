{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.calendar.list'|trans }}<small>{{ calendar.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_calendar_create') }}">{{ 'add.calendar'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_calendar_edit', {'id': calendar.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_calendar_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'table_header_cell.id'|trans }}</th>
                                    <td>{{ calendar.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.name'|trans }}</th>
                                    <td>{{ calendar.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.is_based'|trans }}</th>
                                    <td>
                                        {% if calendar.isBased %}
                                            <span class="c-green">{{ 'message.yes'|trans }}</span>
                                        {% else %}
                                            <span class="c-red">{{ 'message.no'|trans }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.is_baseline'|trans }}</th>
                                    <td>
                                        {% if calendar.isBaseline %}
                                            <span class="c-green">{{ 'message.yes'|trans }}</span>
                                        {% else %}
                                            <span class="c-red">{{ 'message.no'|trans }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.parent'|trans }}</th>
                                    <td>{{ calendar.parent.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.project'|trans }}</th>
                                    <td>{{ calendar.project.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.workpackages'|trans }}</th>
                                    <td>
                                        {% for wp in calendar.workPackages %}
                                            <p>{{ wp.name|default('-') }}</p>
                                        {% endfor %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.wppwcts'|trans }}</th>
                                    <td>
                                        {% for wppwct in calendar.workPackageProjectWorkCostTypes %}
                                            <p>{{ wppwct.name|default('-') }}</p>
                                        {% endfor %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
