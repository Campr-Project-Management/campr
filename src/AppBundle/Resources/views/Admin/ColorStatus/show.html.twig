{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.color_status.list.title'|trans }}<small>{{ color_status.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_color_status_create') }}">{{ 'admin.color_status.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_color_status_edit', {'id': color_status.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_color_status_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'admin.color_status.list.table.name'|trans }}</th>
                                    <td>{{ color_status.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.color_status.list.table.color'|trans }}</th>
                                    <td>{{ color_status.color }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.color_status.list.table.sequence'|trans }}</th>
                                    <td>{{ color_status.sequence }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
