{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.project_role.list.title'|trans }}<small>{{ project_role.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_role_create') }}">{{ 'admin.project_role.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_project_role_edit', {'id': project_role.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_project_role_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'admin.project_role.list.table.name'|trans }}</th>
                                    <td>{{ project_role.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.project_role.list.table.sequence'|trans }}</th>
                                    <td>{{ project_role.sequence }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.project_role.list.table.lead'|trans }}</th>
                                    <td>
                                        {% if project_role.isLead %}
                                            {{ 'admin.project_role.list.table.lead_checked'|trans }}
                                        {% else %}
                                            {{ 'admin.project_role.list.table.lead_not_checked'|trans }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.project_role.list.table.created_at'|trans }}</th>
                                    <td>
                                        {% if project_role.createdAt %}
                                            {{ project_role.createdAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'admin.project_role.list.table.updated_at'|trans }}</th>
                                    <td>
                                        {% if project_role.updatedAt %}
                                            {{ project_role.updatedAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
