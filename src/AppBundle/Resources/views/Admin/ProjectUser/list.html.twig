{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="card">
        <div class="card-header bgm-teal">
            <h2>{{ 'title.project_user.list'|trans }}<small>{{ 'subtitle.project_user'|trans }}</small></h2>
            <a href="{{ path('app_admin_project_user_create') }}">
                <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
            </a>
        </div>
        <div class="card-body">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="alert alert-success m-t-15">
                    <strong>{{ flash_message }}</strong>
                </div>
            {% endfor %}
            <div id="delete-item-alert" class="alert alert-success m-t-15 hidden">
                <strong>
                    {{ 'success.project_user.delete.first'|trans({}, 'flashes') }}
                    <span id="object-id">
                        {% for flash_message in app.session.flashBag.get('success') %}
                            {{ flash_message }}
                        {% endfor %}
                    </span>
                    {{ 'success.project_user.delete.second'|trans({}, 'flashes') }}
                </strong>
            </div>
            <div class="table-responsive">
                <table
                        id="data-table-command"
                        class="table table-condensed table-striped table-vmiddle"
                        data-url="{{ path('app_admin_project_user_list_filtered') }}"
                        data-show="app_admin_project_user_show"
                        data-edit="app_admin_project_user_edit"
                        data-delete="app_admin_project_user_delete">
                    <thead>
                        <tr>
                            <th data-column-id="id" data-identifier="true" data-type="numeric">{{ 'table_header_cell.id'|trans }}</th>
                            <th data-column-id="userFullName">{{ 'table_header_cell.user'|trans }}</th>
                            <th data-column-id="projectName">{{ 'table_header_cell.project'|trans }}</th>
                            <th data-column-id="projectCategoryName">{{ 'table_header_cell.project_category'|trans }}</th>
                            <th data-column-id="projectRoleName">{{ 'table_header_cell.project_role'|trans }}</th>
                            <th data-column-id="projectDepartmentName">{{ 'table_header_cell.project_department'|trans }}</th>
                            <th data-column-id="projectTeamName">{{ 'table_header_cell.project_team'|trans }}</th>
                            <th data-column-id="commands" data-formatter="commands" data-sortable="false">{{ 'placeholder.actions'|trans }}</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Data Table -->
    <script src="{{ asset('bundles/app/assets/js/data_table.js') }}"></script>
    <script src="{{ asset('bundles/app/assets/js/alert_messages.js') }}"></script>
{% endblock %}
