{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="card">
        <div class="card-header bgm-teal">
            <h2><strong>"{{ project_name }}"</strong> {{ 'admin.media.list.title'|trans }}<small>{{ 'admin.media.list.subtitle'|trans }}</small></h2>
            <a href="{{ path('app_admin_project_media_create', {'project': project_id}) }}">
                <button class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i></button>
            </a>
        </div>
        <div class="card-body">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div id="general-alert" class="alert alert-success m-t-15">
                    <strong>{{ flash_message }}</strong>
                </div>
            {% endfor %}
            <div id="delete-item-alert" class="alert alert-success m-t-15 hidden">
                <strong>
                    {{ 'admin.media.delete.success.first'|trans }}
                    <span id="object-id">
                        {% for flash_message in app.session.flashBag.get('success') %}
                            {{ flash_message }}
                        {% endfor %}
                    </span>
                    {{ 'admin.media.delete.success.second'|trans }}
                </strong>
            </div>
            <div class="table-responsive">
                <table
                        id="data-table-command"
                        class="table table-condensed table-stripe4d table-vmiddle"
                        data-url="{{ path('app_admin_project_media_list_filtered', {'project': project_id}) }}"
                        data-params='{"name": "project", "value": "{{ project_id }}"}'
                        data-show="app_admin_project_media_show"
                        data-edit="app_admin_project_media_edit"
                        data-delete="app_admin_project_media_delete"
                        data-download="app_admin_project_media_download">
                    <thead>
                    <tr>
                        <th data-column-id="id" data-identifier="true" data-type="numeric">{{ 'admin.media.list.table.id'|trans }}</th>
                        <th data-column-id="fileSystemName">{{ 'admin.media.list.table.filesystem'|trans }}</th>
                        <th data-column-id="userFullName">{{ 'admin.media.list.table.user'|trans }}</th>
                        <th data-column-id="path">{{ 'admin.media.list.table.path'|trans }}</th>
                        <th data-column-id="mimeType">{{ 'admin.media.list.table.mime'|trans }}</th>
                        <th data-column-id="fileSize">{{ 'admin.media.list.table.size'|trans }}</th>
                        <th data-column-id="commands" data-formatter="commands" data-sortable="false">{{ 'admin.general.placeholder.actions'|trans }}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Data Table -->
    <script src="{{ asset('bundles/app/assets/js/data_table.js') }}"></script>
    <script src="{{ asset('bundles/app/assets/js/alert_messages.js') }}"></script>
{% endblock %}
