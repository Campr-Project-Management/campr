{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.media.list'|trans }}<small>{{ media.path }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_media_edit', {'project': project_id,  'id': media.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'table_header_cell.id'|trans }}</th>
                                <td>{{ media.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.filesystem'|trans }}</th>
                                <td>{{ media.filesystem.name|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.meetings'|trans }}</th>
                                <td>
                                    {% for meeting in media.meetings %}
                                        <p>{{ meeting.name }}</p>
                                    {% endfor %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.user'|trans }}</th>
                                <td>{{ media.user.username|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.path'|trans }}</th>
                                <td>{{ media.path|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.mime'|trans }}</th>
                                <td>{{ media.mimeType|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.size'|trans }}</th>
                                <td>{{ media.fileSize|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.created_at'|trans }}</th>
                                <td>{{ media.createdAt|date('d/m/Y') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
