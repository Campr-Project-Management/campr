{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.project_scope.list.title'|trans }}<small>{{ 'admin.project_scope.list.subtitle'|trans }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_scope_create') }}">{{ 'admin.project_scope.list.add'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    {% for flash_message in app.session.flashBag.get('success') %}
                        <div class="alert alert-success m-t-15">
                            <strong>{{ flash_message }}</strong>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'admin.project_scope.list.table.id'|trans }}</th>
                                    <th>{{ 'admin.project_scope.list.table.name'|trans }}</th>
                                    <th>{{ 'admin.project_scope.list.table.project'|trans }}</th>
                                    <th>{{ 'admin.project_scope.list.table.sequence'|trans }}</th>
                                    <th>{{ 'admin.project_scope.list.table.created_at'|trans }}</th>
                                    <th>{{ 'admin.project_scope.list.table.updated_at'|trans }}</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for project_scope in project_scopes %}
                                <tr>
                                    <td class="f-500 c-cyan">{{ project_scope.id }}</td>
                                    <td>{{ project_scope.name }}</td>
                                    <td>
                                        {% if project_scope.project %}
                                            {{ project_scope.project.name }}
                                        {% endif %}
                                    </td>
                                    <td>{{ project_scope.sequence }}</td>
                                    <td>
                                        {% if project_scope.createdAt %}
                                            {{ project_scope.createdAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if project_scope.updatedAt %}
                                            {{ project_scope.updatedAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% include '@App/Admin/Layout/Partials/form_list_buttons.html.twig'
                                            with {
                                                'show_path': 'app_admin_project_scope_show',
                                                'edit_path': 'app_admin_project_scope_edit',
                                                'delete_path': 'app_admin_project_scope_delete',
                                                'id': project_scope.id,
                                            }
                                        %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="f-500 c-cyan">{{ 'admin.project_scope.list.not_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
