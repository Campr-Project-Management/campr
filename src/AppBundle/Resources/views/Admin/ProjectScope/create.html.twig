{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>{{ 'admin.project_scope.create.title'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_scope_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_project_scope_create'),
                            'attr': {
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                        {% if form.vars.valid == false %}
                            <div class="alert alert-danger">
                                {% for field in form.children %}
                                    {{ form_errors(field) }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(
                            form.name,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                    'placeholder': 'admin.general.placeholder.name'|trans,
                                },
                                'label': 'admin.project_status.create.name'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.project,
                            {
                                'attr': {'class': 'form-control input-sm'},
                                'label': 'admin.project_status.create.project'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.sequence,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                    'placeholder': 'admin.project_status.create.sequence'|trans,
                                },
                                'label': 'admin.project_category.create.sequence'|trans,
                            }
                        ) }}

                        {% include '@App/Admin/Layout/Partials/form_create_button.html.twig' %}

                        <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
