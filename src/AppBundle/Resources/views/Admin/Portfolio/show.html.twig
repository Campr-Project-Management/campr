{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'admin' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'admin.portfolio.list.title'|trans }}<small>{{ portfolio.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_portfolio_create') }}">{{ 'admin.portfolio.list.add'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_portfolio_edit', {'id': portfolio.id}) }}">{{ 'admin.general.form.button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_portfolio_list') }}">{{ 'admin.general.form.button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'admin.portfolio.list.table.name'|trans }}</th>
                                <td>{{ portfolio.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.portfolio.list.table.description'|trans }}</th>
                                <td>{{ portfolio.description }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.portfolio.list.table.created_at'|trans }}</th>
                                <td>
                                    {% if portfolio.createdAt %}
                                        {{ portfolio.createdAt|date('d/m/Y') }}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'admin.portfolio.list.table.updated_at'|trans }}</th>
                                <td>
                                    {% if portfolio.updatedAt %}
                                        {{ portfolio.updatedAt|date('d/m/Y') }}
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
