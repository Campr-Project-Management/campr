{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.raci.list'|trans }}<small>{{ raci.workPackage.name|default('-') }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_raci_create') }}">{{ 'add.raci'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_raci_edit', {'id': raci.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_raci_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'table_header_cell.id'|trans }}</th>
                                    <td>{{ raci.id }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.workpackage'|trans }}</th>
                                    <td>{{ raci.workPackage.name|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.user'|trans }}</th>
                                    <td>{{ raci.user.username|default('-') }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.data'|trans }}</th>
                                    <td>{{ raci.data|default('-') }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
