{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.project_role.list'|trans }}<small>{{ project_role.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_role_create') }}">{{ 'add.project_role'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_project_role_edit', {'id': project_role.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_project_role_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th>{{ 'table_header_cell.name'|trans }}</th>
                                    <td>{{ project_role.name }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.sequence'|trans }}</th>
                                    <td>{{ project_role.sequence }}</td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.lead'|trans }}</th>
                                    <td>
                                        {% if project_role.isLead %}
                                            {{ 'table_header_cell.lead_checked'|trans }}
                                        {% else %}
                                            {{ 'table_header_cell.lead_not_checked'|trans }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.created_at'|trans }}</th>
                                    <td>
                                        {% if project_role.createdAt %}
                                            {{ project_role.createdAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>{{ 'table_header_cell.updated_at'|trans }}</th>
                                    <td>
                                        {% if project_role.updatedAt %}
                                            {{ project_role.updatedAt|date('d/m/Y') }}
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
