{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.project_module.create'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_project_module_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_project_module_create'),
                            'attr': {
                                'id': 'create-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                        {% if form.vars.valid == false %}
                            <div class="alert alert-danger">
                                {% for field in form.children %}
                                    {{ form_errors(field) }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(
                            form.module,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                },
                                'label': 'label.module'|trans,
                        }
                        ) }}
                        {{ form_widget(
                            form.project,
                            {
                                'attr': {'class': 'selectpicker'},
                                'label': 'label.project'|trans,
                            }
                        ) }}
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                {{ form_widget(
                                    form.isEnabled,
                                    {
                                        'attr': {'
                                            class': 'form-control',
                                            'toggle': true
                                        },
                                        'label': 'label.enabled'|trans,
                                    }
                                ) }}
                                {{ form_widget(
                                    form.isRequired,
                                    {
                                        'attr': {'
                                            class': 'form-control',
                                            'toggle': true
                                        },
                                        'label': 'label.required'|trans,
                                    }
                                ) }}
                                {{ form_widget(
                                    form.isPrint,
                                    {
                                        'attr': {'
                                            class': 'form-control',
                                            'toggle': true
                                        },
                                        'label': 'label.printable'|trans,
                                    }
                                ) }}
                            </div>
                        </div>

                        {% include '@App/Admin/Layout/Partials/form_create_button.html.twig' %}

                        <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
