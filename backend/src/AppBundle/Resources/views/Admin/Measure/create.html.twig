{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.measure.create'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_measure_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-0 card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_measure_create'),
                            'attr': {
                                'id': 'create-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                    {% if form.vars.valid == false %}
                        <div class="alert alert-danger">
                            {% for field in form.children %}
                                {{ form_errors(field) }}
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_widget(
                        form.title,
                        {
                            'attr': {
                                'class': 'form-control input-sm',
                            },
                            'label': 'label.title'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.description,
                        {
                            'attr': {
                                'class': 'form-control input-sm',
                            },
                            'label': 'label.description'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.cost,
                        {
                            'attr': {
                                'class': 'form-control input-sm',
                            },
                            'label': 'label.cost'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.responsibility,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'label.responsible'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.risk,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'label.risk'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.opportunity,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'label.opportunity'|trans
                        }
                    ) }}

                    {% include '@App/Admin/Layout/Partials/form_create_button.html.twig' %}

                    <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
