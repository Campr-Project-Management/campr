{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.decision.create'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_decision_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_decision_create'),
                            'attr': {
                                'id': 'create-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                        {% if form.vars.valid == false %}
                            <div class="alert alert-danger">
                                {% for field in form.children %}
                                    {{ form_errors(field) }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(
                            form.title,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                },
                                'label': 'label.field_title'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.description,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                },
                                'label': 'label.description'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.dueDate,
                            {
                                'attr': {
                                    'class': 'form-control date-picker',
                                    'addon_front': 'calendar',
                                },
                                'label': 'label.due_date'|trans
                            }
                        ) }}
                        {{ form_widget(
                            form.project,
                            {
                                'attr': {'class': 'selectpicker'},
                                'label': 'label.project'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.distributionList,
                            {
                                'attr': {
                                    'class': 'selectpicker',
                                },
                                'label': 'label.distribution_list'|trans
                            }
                        ) }}
                        {{ form_widget(
                            form.responsibility,
                            {
                                'attr': {'class': 'selectpicker'},
                                'label': 'label.responsibility'|trans,
                            }
                        ) }}
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                {{ form_widget(
                                    form.showInStatusReport,
                                    {
                                        'attr': {'
                                            class': 'form-control',
                                            'toggle': true
                                        },
                                        'label': 'label.show_in_status_report'|trans,
                                    }
                                ) }}
                            </div>
                        </div>

                        {% include '@App/Admin/Layout/Partials/form_create_button.html.twig' %}

                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
