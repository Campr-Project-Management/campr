{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.filesystem.create'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_filesystem_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                {% if form.vars.valid == false %}
                    <div class="alert alert-danger">
                        {% for field in form.children %}
                            {{ form_errors(field) }}
                            {% if field.children %}
                                {% for child in field.children %}
                                    {{ form_errors(child) }}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="card-body card-padding">
                    <div id="ajaxForm">
                        {% include '@App/Admin/FileSystem/Partials/form.html.twig' with {'form': form} %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Data Table -->
    <script type="text/javascript" src="{{ asset('bundles/app/assets/js/forms.js') }}"></script>
{% endblock %}
