{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.close_down_action.list'|trans }}<small>{{ closeDownAction.title }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_close_down_action_create') }}">{{ 'add.close_down_action'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_close_down_action_edit', {'id': closeDownAction.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_close_down_action_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'table_header_cell.id'|trans }}</th>
                                <td>{{ closeDownAction.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.title'|trans }}</th>
                                <td>{{ closeDownAction.title }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.project'|trans }}</th>
                                <td>{{ closeDownAction.projectCloseDown.id }} - {{ closeDownAction.projectName }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.responsibility'|trans }}</th>
                                <td>{{ closeDownAction.responsibilityFullName|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.responsibility'|trans }}</th>
                                <td>{{ closeDownAction.responsibilityFullName|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.due_date'|trans }}</th>
                                <td>{{ closeDownAction.dueDate|date('d/m/Y')|default('-') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
