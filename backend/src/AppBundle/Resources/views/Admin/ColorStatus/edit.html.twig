{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.color_status.edit'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_color_status_create') }}">{{ 'add.color_status'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_color_status_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_color_status_edit', {'id': color_status.id}),
                            'attr': {
                                'id': 'edit-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                        {% if form.vars.valid == false %}
                            <div class="alert alert-danger">
                                {% for field in form.children %}

                                    {{ form_errors(field) }}
                                {% endfor %}
                            </div>
                        {% endif %}
                        {{ form_widget(
                            form.code,
                            {
                                'attr': {
                                'class': 'form-control input-sm',
                            },
                                'label': 'label.code'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.name,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                },
                                'label': 'label.name'|trans,
                        }
                        ) }}
                        {{ form_widget(
                            form.color,
                            {
                                'attr': {'class': 'selectpicker'},
                                'label': 'label.color'|trans,
                            }
                        ) }}
                        {{ form_widget(
                            form.sequence,
                            {
                                'attr': {
                                    'class': 'form-control input-sm',
                                },
                                'label': 'label.sequence'|trans,
                            }
                        ) }}

                        {% include '@App/Admin/Layout/Partials/form_edit_buttons.html.twig'
                            with {
                                'delete_path': 'app_admin_color_status_delete',
                                'id': color_status.id,
                            }
                        %}

                        <span class="hidden">{{ form_row(form._token) }}</span>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
