{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% form_theme form 'AppBundle:Admin/Layout/Partials:form_fields.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.meeting_agenda.create'|trans }}</h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_meeting_agenda_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body card-padding">
                    {{ form_start(
                        form,
                        {
                            'method': 'POST',
                            'action': path('app_admin_meeting_agenda_create'),
                            'attr': {
                                'id': 'create-form',
                                'class': 'form-horizontal',
                                'novalidate': 'novalidate',
                            },
                        }
                    ) }}
                    {% if form.vars.valid == false %}
                        <div class="alert alert-danger">
                            {% for field in form.children %}
                                {{ form_errors(field) }}
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_widget(
                        form.meeting,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'label.meeting'|trans,
                        }
                    ) }}
                    {{ form_widget(
                        form.topic,
                        {
                            'attr': {
                                'class': 'form-control input-sm',
                            },
                            'label': 'label.topic'|trans,
                        }
                    ) }}
                    {{ form_widget(
                        form.responsibility,
                        {
                            'attr': {
                                'class': 'selectpicker',
                            },
                            'label': 'label.responsible'|trans,
                        }
                    ) }}
                    {{ form_widget(
                        form.start,
                        {
                            'attr': {
                                'class': 'form-control time-picker',
                                'data-date-format': "HH:mm",
                                'addon_front': 'time',
                            },
                            'label': 'label.start'|trans
                        }
                    ) }}
                    {{ form_widget(
                        form.duration,
                        {
                            'attr': {
                            'class': 'form-control input-sm',
                        },
                            'label': 'label.duration'|trans,
                        }
                    ) }}

                    {% include '@App/Admin/Layout/Partials/form_create_button.html.twig' %}

                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
