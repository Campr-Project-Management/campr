{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.meeting_agenda.list'|trans }}<small>{{ meeting_agenda.meeting.name|default('-') }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_meeting_agenda_create') }}">{{ 'add.meeting_agenda'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_meeting_agenda_edit', {'id': meeting_agenda.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_meeting_agenda_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'table_header_cell.id'|trans }}</th>
                                <td>{{ meeting_agenda.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.meeting'|trans }}</th>
                                <td>{{ meeting_agenda.meeting.name|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.topic'|trans }}</th>
                                <td>{{ meeting_agenda.topic|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.responsible'|trans }}</th>
                                <td>{{ meeting_agenda.responsibility.username|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.start'|trans }}</th>
                                <td>{{ meeting_agenda.start|date('H:i') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.duration'|trans }}</th>
                                <td>{{ meeting_agenda.duration}}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
