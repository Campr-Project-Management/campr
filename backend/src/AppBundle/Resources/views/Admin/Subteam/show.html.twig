{% extends 'AppBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.subteam.list'|trans }}<small>{{ subteam.name }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_subteam_create') }}">{{ 'add.subteam'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_subteam_edit', {'id': subteam.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_subteam_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'table_header_cell.name'|trans }}</th>
                                <td>{{ subteam.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.description'|trans }}</th>
                                <td>{{ subteam.description }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.subteam_members'|trans }}</th>
                                <td>
                                    <ul>
                                        {% for subteamMember in subteam.subteamMembers %}
                                            <li>{{ subteamMember.username }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.project'|trans }}</th>
                                <td>{{ subteam.projectName }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.subteam_parent'|trans }}</th>
                                <td>{{ subteam.parent ? subteam.parent.name : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
