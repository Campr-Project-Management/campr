{% extends 'MainBundle:Admin:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">
                    {{ team.name }} - {{ 'title.team_member.list'|trans }}
                    <a href="{{ path('main_admin_team_list') }}" class="btn btn-sm btn-primary pull-right">{{ 'button.back_to_list'|trans }}</span></a>
                </p>
            </h1>
            <a href="{{ path('main_admin_team_member_create',{'team': team.id}) }}" class="btn btn-sm btn-primary pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-condensed table-responsive">
                <thead>
                <th>{{ 'table_header_cell.id'|trans }}</th>
                <th>{{ 'table_header_cell.username'|trans }}</th>
                <th>{{ 'table_header_cell.created_at'|trans }}</th>
                <th>{{ 'table_header_cell.updated_at'|trans }}</th>
                <th>{{ 'table_header_cell.roles'|trans }}</th>
                <th>{{ 'placeholder.actions'|trans }}</th>
                </thead>
                <tbody>
                {% for team_member in team_members %}
                    <tr>
                        <td>{{ team_member.id }}</td>
                        <td>{{ team_member.user.username }}</td>
                        <td>{{ team_member.createdAt|date('d/m/Y') }}</td>
                        <td>{{ team_member.updatedAt|date('d/m/Y') }}</td>
                        <td>
                            {% for role in team_member.roles %}
                                <p>{{ role }}</p>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('main_admin_team_member_edit', {'team': team.id, 'id': team_member.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                            <a href="{{ path('main_admin_team_member_delete', {'team': team.id, 'id': team_member.id}) }}" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
