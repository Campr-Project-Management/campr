<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-30">
                Contact us
            </h2>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-8 mr-md-auto ml-md-auto">
            <p class="subtitle text-center">
                Send us a message if you want to start using CAMPR.
            </p>
        </div>
    </div>
</div>

<div class="container">
    <div id="alert_danger" class="alert alert-danger" style="display:none;"></div>
    <div id="alert_success" class="alert alert-success" style="display:none;"></div>
    <div class="row">
        <div class="col-lg-10 col-sm-12 ml-lg-auto mr-lg-auto">
            {{ form_start(
                form,
                {
                    'method': 'POST',
                    'action': path('main_contact'),
                    'attr': {
                        'id': 'contact-form',
                        'class': 'form',
                        'novalidate': 'novalidate'
                    },
                }
            ) }}
                <div class="row">
                    <div class="col-md-12 mb-30">
                        <span class="input">
                            {{ form_widget(
                                form.message,
                                {
                                    'attr': {
                                        'class': 'input__field',
                                        'rows': 4,
                                        'cols': 50,
                                    },
                                }
                            ) }}
                            <label class="input__label" for="contact_message">
                                <span class="icon">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 24 24">
