<a name="registration_success"></a>
{% for message in app.session.flashBag.get('registration_success') %}
    <div class="registration_success">{{ message|trans }}</div>
{% endfor %}

{% for element in signUpForm %}
    {{ form_errors(element) }}
{% endfor %}

{{ form_start(signUpForm, {attr: {class: 'form login-form'}}) }}
    <div class="slider-holder" id="slider_holder_1" data-min="0" data-max="36" data-step="1" data-type="single">
        <div class="heading flex flex-space-between">
            <span class="title">Project Duration</span>
            <span class="value">
            <span id="slider_from_1" class="number"></span>
            <span class="text">Months</span>
        </span>
        </div>
        {{ form_widget(
            signUpForm.projectDuration,
            {
                id: 'slider_1',
                attr: {
                class: 'range-slider',
                'data-from': 'slider_from_1'
            }
            }
        ) }}
    </div>

    <div class="slider-holder" id="slider_holder_2" data-min="0" data-max="3000000" data-step="10000" data-type="single">
        <div class="heading flex flex-space-between">
            <span class="title">Project Budget</span>
            <span class="value">
            <span class="text">$</span>
            <span id="slider_from_2" class="number"></span>
        </span>
        </div>
        {{ form_widget(
            signUpForm.projectBudget,
            {
                id: 'slider_2',
                attr: {
                class: 'range-slider',
                'data-from': 'slider_from_2'
            }
            }
        ) }}
    </div>

    <div class="slider-holder" id="slider_holder_3" data-min="1" data-max="20" data-step="1" data-type="double">
        <div class="heading flex flex-space-between">
            <span class="title">People Involved</span>
            <span class="value">
            <span id="slider_from_3" class="number"></span>
            <span class="text"> - </span>
            <span id="slider_to_3" class="number"></span>
        </span>
        </div>
        {{ form_widget(
            signUpForm.peopleInvolved,
            {
                id: 'slider_3',
                attr: {
                    class: 'range-slider',
                    'data-from': 'slider_from_3',
                    'data-to': 'slider_to_3'
                }
            }
        ) }}
    </div>

    <div class="slider-holder" id="slider_holder_4" data-min="1" data-max="20" data-step="1" data-type="double">
        <div class="heading flex flex-space-between">
            <span class="title">Departments Involved</span>
            <span class="value">
                <span id="slider_from_4" class="number"></span>
                <span class="text"> - </span>
                <span id="slider_to_4" class="number"></span>
