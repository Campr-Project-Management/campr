            signUpForm.strategicalMeaning,
            {
                id: 'slider_5',
                attr: {
                class: 'range-slider',
                'data-from': 'slider_from_5',
                'data-to': 'slider_from_5'
            }
            }
        ) }}
    </div>

    <div class="slider-holder" id="slider_holder_6" data-type="single" data-values="Very Few, Few, Many, Very Many">
        <div class="heading flex flex-space-between">
            <span class="title">Risks</span>
            <span class="value">
                <span id="slider_from_6" class="number"></span>
