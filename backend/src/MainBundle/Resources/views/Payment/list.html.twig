{% trans_default_domain 'messages' %}

{% extends 'MainBundle::base.html.twig' %}

{% block body_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <p class="text-primary">{{ 'title.payment.list'|trans }}</p>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-condensed table-responsive">
                <thead>
                    <th>{{ 'table_header_cell.id'|trans }}</th>
                    <th>{{ 'table_header_cell.method'|trans }}</th>
                    <th>{{ 'table_header_cell.team'|trans }}</th>
                    <th>{{ 'placeholder.actions'|trans }}</th>
                </thead>
                <tbody>
                {% for i in 1..10 %}
                    <tr>
                        <td>{{ i }}</td>
                        <td>method{{ i }}</td>
                        <td>team-{{ i }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
